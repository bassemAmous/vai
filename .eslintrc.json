{
  "extends": "airbnb-base",
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "no-console": "off",
    "comma-dangle": ["error", {
      "arrays": "only-multiline",
      "objects": "only-multiline",
      "imports": "only-multiline",
      "exports": "only-multiline",
      "functions": "ignore"
    }],
    // Plugins
    "import/no-extraneous-dependencies": [
      "error",
      {
        "packageDir": "."
      }
    ]
  }
}
